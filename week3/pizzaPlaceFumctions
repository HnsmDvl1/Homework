//1. and Bonus Challenge #9
let pizzaToppings = ['cheese' , 'pepperoni' , 'onion', 'pineapple'];
//2.
greetCustomer();  
function greetCustomer() {
  console.log(`Welcome to the Pizza House! Our toppings are: ${pizzaToppings}`);
}
for (let pizzaTopping of pizzaToppings);
//3.
let size = ['small', 'medium', 'large'];
let crust = ['thick', 'thin', 'original'];
let pizza = {
  size: size[2],
  crust: crust[0],
  toppings: pizzaToppings[0, 1, 2, 3],
};

function getPizzaOrder(size, crust, ...pizzaToppings) {
  
    console.log(`One ${pizza.size} ${pizza.crust} crust pizza with ${pizza.toppings} ...coming up!`);
    return [size, crust, pizzaToppings];
};
getPizzaOrder()                 
//4.
function preparePizza(size, crust, pizzaToppings) {
  console.log('...Cooking pizza!...');
  return size, crust, pizzaToppings; 
}
preparePizza();
//5.
function servePizza(size, crust, pizzaTopping) {
  console.log(`Order up! Here's your ${pizza.size} ${pizza.crust} crust with ${pizzaToppings}. Enjoy!`);
  return [pizza];
};
servePizza();
//6.
preparePizza(getPizzaOrder(greetCustomer()));